{
  "name": "space-router",
  "description": "All the routing essentials.",
  "version": "0.9.0",
  "main": "dist/cjs",
  "module": "dist/esm",
  "license": "ICS",
  "repository": {
    "type": "git",
    "url": "git://github.com/KidkArolis/space-router.git"
  },
  "keywords": [
    "browser",
    "router",
    "small",
    "clientside",
    "universal",
    "history",
    "location",
    "url"
  ],
  "author": "Karolis Narkevicius",
  "scripts": {
    "test": "npm run build && healthier && prettier --check '**/*.{js,css,yml}' && c8 ava",
    "format": "prettier --write '**/*.{js,css,yml}'",
    "coverage": "c8 --reporter=html ava",
    "build": "node ./tasks/build.js",
    "watch": "node ./tasks/build.js -w",
    "release": "np --no-release-draft",
    "release:beta": "np --tag=beta --no-release-draft",
    "release:docs": "hugo -s docs && gh-pages -d docs/public"
  },
  "devDependencies": {
    "@swc-node/register": "^1.6.4",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.49",
    "ava": "^5.2.0",
    "c8": "^7.13.0",
    "execa": "^7.1.1",
    "gh-pages": "^5.0.0",
    "healthier": "^6.3.0",
    "prettier": "^2.8.7"
  },
  "healthier": {
    "global": [
      "location",
      "history",
      "requestAnimationFrame"
    ],
    "ignore": [
      "docs/static/js",
      "docs/assets/js"
    ]
  },
  "ava": {
    "require": [
      "@swc-node/register"
    ]
  }
}
